{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@screens/*": ["src/screens/*"]
    }
  },
  "include": ["src/**/*", "App.tsx", "env.d.ts", "nativewind-env.d.ts"]
}
